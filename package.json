{
  "name": "remove-ia-comments",
  "displayName": "Remove IA Comments",
  "description": "Elimina comentarios del archivo actual con preview avanzada",
  "version": "1.0.0",
  "publisher": "maickdavila",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:remove-ia-comments.removeComments",
    "onCommand:remove-ia-comments.removeCommentsDirect"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "remove-ia-comments.removeComments",
        "title": "Remove Comments with Preview",
        "category": "Remove IA Comments"
      },
      {
        "command": "remove-ia-comments.removeCommentsDirect",
        "title": "Remove Comments Directly",
        "category": "Remove IA Comments"
      }
    ],
    "keybindings": [
      {
        "command": "remove-ia-comments.removeComments",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "remove-ia-comments.removeCommentsDirect",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "remove-ia-comments.removeComments",
          "group": "1_modification",
          "when": "editorTextFocus"
        },
        {
          "command": "remove-ia-comments.removeCommentsDirect",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "remove-ia-comments-panel",
          "name": "Remove Comments Preview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remove-ia-comments",
          "title": "Remove Comments",
          "icon": "$(comment-discussion)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
